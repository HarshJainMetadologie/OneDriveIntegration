<apex:page standardController="Employee__c" extensions="EmployeeController" renderAs="pdf" showHeader="false" applyBodyTag="false">

    <div style="border:2px solid #000; padding:15px; width:400px; font-family:Arial;">
        <center>
            <h2>Employee ID Card</h2>
            <apex:image value="{!imageUrl}" width="100" height="100"/><br/>
        </center>

        <p><b>ID:</b> {!Employee__c.Id}</p>
        <p><b>Name:</b> {!Employee__c.Name}</p>
        <p><b>Title:</b> {!Employee__c.Title__c}</p>
        <p><b>Email:</b> {!Employee__c.Email__c}</p>
        <p><b>Phone:</b> {!Employee__c.Phone_Number__c}</p>
        <p><b>Address:</b> {!Employee__c.Address__c}</p>
        <p><b>Blood Group:</b> {!Employee__c.Blood_Group__c}</p>
        <p><b>DOB:</b> {!Employee__c.Date_Of_Birth__c}</p>
    </div>

</apex:page>
